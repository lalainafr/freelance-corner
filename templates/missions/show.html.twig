{% extends 'base1.html.twig' %}

{% block title %}
	Detail de la mission
{% endblock %}

{% block body %}
	<section>
		<h1 class="text-primary text-center">
			- DETAIL DE LA MISSION -
		</h1>
		<br>
		<div class="row justify-content-center">
			<div class="col-6">
				<a href="{{path('mission_list')}}">Retour à la liste</a>
				<p>
					<b>#</b>
					-
					{{mission.id}}</p>
				<p>
					<b>Titre</b> -
					{{mission.title}}</p>
				<p>
					<b>Description</b>
					-
					{{mission.description}}</p>
				<p>
					<b>Prix</b>
					-
					{{mission.price}}</p>
				<p>
					<b>Délais</b>
					-
					{{mission.deadline | date('d/m/Y')}}</p>
				<p>
					<b>Date de création</b>
					-
					{{mission.createdAt | date('d/m/Y')}}</p>
			</div>
		</div>

	</div>
</section>{% endblock %}
